@model SurpriseTask.Repository.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="AlignCenter h-100 d-flex justify-content-center align-items-center">
    <div class="text-center w-25 ">
        <h1 class="display-3 mb-3 text-white">Welcome</h1>
        <h4 class="mb-3 display-6 text-white">Login</h4>
        <form id="loginForm" asp-action="Index" asp-controller="Home">
            <div class=" has-validation my-2 mb-4">
                <input type="text" class="form-control" id="validationServerUsername" asp-for="Email"
                    aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger float-start"></span>
            </div>

            <div class="has-validation my-2 mb-4">
                <div class="position-relative password-section">
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="password"
                        asp-for="Password">
                    <div class="eye" onclick="eyeActive3()">
                        <i class="bi bi-eye openeye3 eye inactive"></i>
                        <i class="bi bi-eye-slash closeeye3 eye active"></i>
                    </div>
                </div>

                <span class="text-danger float-start" asp-validation-for="Password">@TempData["error"]</span>
            </div>

            <div class="">
                <button type="submit" class="w-100 btn btn-color text-white rounded-3">Login</button>
            </div>
        </form>


    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        window.success = "@TempData["success"]";
        window.error = "@TempData["error"]";
    </script>
    <script src="~/js/site.js"></script>
}
