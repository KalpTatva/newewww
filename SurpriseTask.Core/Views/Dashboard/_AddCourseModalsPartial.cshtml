@model SurpriseTask.Repository.ViewModels.AddCourseViewModel;

<div class="modal fade" id="AddCourse" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add course</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="AddCourseForm" method="post">
        <div class="modal-body">
          <div class=" has-validation my-2 mb-4">
            <input class="form-control" asp-for="CourseName" placeholder="Course name">
            <span asp-validation-for="CourseName" class="text-danger float-start"></span>
          </div>
          <div class=" has-validation my-2 mb-4">
            <input  class="form-control"  asp-for="CourseContent"
               placeholder="Course Content">
            <span asp-validation-for="CourseContent" class="text-danger float-start"></span>
          </div>
          <div class="has-validation my-2 mb-4">
            <input  class="form-control" asp-for="Credits" 
              placeholder="Credits">
            <span asp-validation-for="Credits" class="text-danger float-start"></span>
          </div>
          <div class="has-validation my-2 mb-4">
            <input class="form-control" asp-for="Department"  placeholder="Department">
            <span asp-validation-for="Department" class="text-danger float-start"></span>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
